{
  "compilerOptions": {
    // import maps
    "baseUrl": "./",
    "paths": {
      "npm:lucia@*": ["./node_modules/lucia/dist/index.d.ts"],
      "npm:surrealdb.js@*": ["./node_modules/surrealdb.js/types/index.d.ts"]
    },

    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleDetection": "force",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,

    // Others
    "declaration": true,
    "allowSyntheticDefaultImports": true

  },
  "exclude": ["node_modules/", "**/*.test.ts"]
}
